<%= render 'navbar' %>
<br>
<div class="container">

    <div class="row">
        <div>
            <h1 class="display-4">
                <%= @artist.name %>
            </h1>
            <h4>Albums (
                <%= @artist.albums.length %>)</h4>
            <br>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <% @artist.albums.each do |album| %>
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <img class="card-img-top" src=<%=album.image_url %> alt="Foto del Album">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= album.name %>
                            </h5>
                            <p class="card-text">
                                <%= album.released_at.year %>
                            </p>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col-md-12">
                <div class="card">
                    <img class="card-img-top" src=<%=@artist.image_url %> alt="Foto del Artista">
                </div>
            </div>
        </div>
    </div>