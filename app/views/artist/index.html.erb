<%= render 'navbar' %>

<br>

<div class="container">
    <div class="row">

        <% @artist.each do |artist| %>

        <div class="col-md-4">

            <div class="card m-2">
                <img class="card-img-top" src=<%=artist.image_url %> alt="Foto del Artista" style="height:220px;">

                <div class="card-body">
                    <h5 class="card-title text-center">
                        <%= artist.name %>
                    </h5>

                    <%= link_to "Ver mas", artist_path(artist), class: "btn btn-primary btn-block" %>

                </div>
            </div>

        </div>

        <% end %>

    </div>
</div>